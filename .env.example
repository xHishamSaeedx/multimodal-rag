# ============================================
# Multimodal RAG - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# Supabase Configuration (Document Store)
# ============================================
# Get these from your Supabase project dashboard: https://app.supabase.com
# Project Settings > API > Project URL and API keys

# Supabase Project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key (safe for client-side use)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (server-side only, has admin privileges)
# WARNING: KEEP THIS SECRET - Never expose in client-side code!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# Qdrant Configuration (Vector Database)
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
# Optional: API key if using Qdrant Cloud
# QDRANT_API_KEY=your-qdrant-api-key

# ============================================
# Elasticsearch Configuration (BM25 Sparse Index)
# ============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_NAME=rag_chunks
# Optional: Authentication (if enabled)
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your-password

# ============================================
# MinIO Configuration (Raw Data Lake)
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin12345
MINIO_BUCKET_NAME=raw-documents
MINIO_USE_SSL=false
# For production, set to true and configure SSL
# MINIO_USE_SSL=true

# ============================================
# LLM Configuration
# ============================================
# Choose one or more LLM providers

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
# Alternative: gpt-3.5-turbo, gpt-4, etc.

# Anthropic Claude Configuration (Alternative)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229
# Alternative: claude-3-sonnet-20240229, claude-3-haiku-20240307

# Local LLM (Ollama) Configuration (Alternative)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2
# Alternative: mistral, codellama, etc.

# ============================================
# Embedding Model Configuration
# ============================================
# Text Embedding Model (sentence-transformers)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternatives:
# - sentence-transformers/all-mpnet-base-v2 (768 dim, better quality)
# - intfloat/e5-base-v2 (768 dim, state-of-the-art)

EMBEDDING_DIMENSION=384
# Set to 768 if using all-mpnet-base-v2 or e5-base-v2

# Embedding Device (cpu or cuda)
EMBEDDING_DEVICE=cpu
# Set to cuda if you have GPU support

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Set to false in production

# API Authentication (Phase 1: Basic API keys)
API_KEY=your-api-key-here
# Generate a secure random key for production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# Add your frontend URLs here

# ============================================
# Retrieval Configuration
# ============================================
# Number of chunks to retrieve from each index
RETRIEVAL_TOP_K_SPARSE=50
RETRIEVAL_TOP_K_DENSE=50

# Final number of chunks after merging and reranking
RETRIEVAL_TOP_N_FINAL=10

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/app.log
# Set to empty string to disable file logging

# ============================================
# Application Configuration
# ============================================
APP_ENV=development
# Options: development, staging, production

APP_NAME=multimodal-rag
APP_VERSION=1.0.0

# ============================================
# Optional: Monitoring & Observability
# ============================================
# Prometheus Metrics (if enabled)
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090

# Sentry Error Tracking (if enabled)
# SENTRY_DSN=your-sentry-dsn-here

# ============================================
# Optional: Knowledge Graph (Future Phase)
# ============================================
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-neo4j-password